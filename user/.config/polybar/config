[colors]
foreground = #333333
background = #FFFFFF
primary= #cccccc


[bar/main]
monitor = ${env:MONITOR:}
enable-ipc = true

# Dimensions
height = 22

# Fonts
font-0 = DejaVu Sans Mono:size=9;2
font-1 = Font Awesome 5 Free:style=Solid:size=12;2
font-2 = Font Awesome 5 Brands:pixelsize=12;2

# Colors
background = ${colors.background}
foreground = ${colors.foreground}

# Misc
fixed-center = true
padding= 1
module-margin = 1

# Modules
modules-left = time keyboard previous playpause next spotify
modules-center = i3
modules-right = updates wi-fi pulseaudio mic backlight filesystem cpu memory  battery


# LEFT

[module/time]
type = internal/date

date = %H:%M
interval = 60


[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock

label-layout = %{A1::} %layout%%{A}


[module/previous]
type = custom/ipc

hook-0 = echo ""
hook-1 = echo ""

click-left = "spotifyctl -q previous"


[module/playpause]
type = custom/ipc

hook-0 = echo ""
hook-1 = echo ""
hook-2 = echo ""

click-left = "spotifyctl -q playpause"


[module/next]
type = custom/ipc

hook-0 = echo ""
hook-1 = echo ""

click-left = "spotifyctl -q next"


[module/spotify]
type = custom/ipc

hook-0 = echo ""
hook-1 = spotifyctl -q status --format '%artist% : %title%'

click-left = i3-msg '[class="Spotify"] focus'


# CENTER

[module/i3]
type = internal/i3

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

pin-workspaces = true
index-sort = true
enable-click = true
enable-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1

label-focused = %icon%
label-focused-background = ${colors.primary}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %icon%
label-visible-background = ${colors.primary}
label-visible-padding = 1

label-urgent = %icon%
label-urgent-padding = 1


# RIGHT

[module/updates]
type = custom/script

exec = /home/user/.config/polybar/scripts/updates
interval = 600


[module/wi-fi]
type = internal/network

interface = wlan0
interval = 1

label-connected = %{A1:iwgtk:}%essid% %{A}
label-disconnected = %{A1:iwgtk:}%{F#cccccc}%{F-}%{A}


[module/bluetooth]
type = custom/script

exec = /home/user/.config/polybar/scripts/bluetooth
interval = 1

format=%{A1:blueman-manager:}<label>%{A}


[module/pulseaudio]
type = internal/pulseaudio

label-volume = %{A1:pavucontrol -t 1:} %percentage:3%%%{A}
label-muted = %{A1:pavucontrol -t 1:}%{F#cccccc} %percentage:3%%%{F-}%{A}


[module/mic]
type = custom/script
interval = 1

format=%{A1:pavucontrol -t 4:}<label>%{A}

exec = /home/user/.config/polybar/scripts/mic


[module/backlight]
type = internal/backlight
card = amdgpu_bl0

label =  %percentage:3%%


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /

label-mounted =  %free%


[module/cpu]
type = internal/cpu
label =  %percentage:3%%


[module/memory]
type = internal/memory
label =  %gb_used%
interval = 3


[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

format-charging = <ramp-capacity> <label-charging>
format-discharging = %{F#999999}<ramp-capacity>%{F-} <label-discharging>

label-full =  99%
label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 =  
