[colors]
foreground = #D2BF8C
background = #32302F
background-alt= #665C54
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:eDP}

# Dimensions
height = 22
wm-restack = i3

# Fonts
font-0 = DejaVu Sans Mono:size=9;2
font-1 = Font Awesome 5 Free:style=Solid:size=12;2
font-2 = Font Awesome 5 Brands:pixelsize=12;2

# Colors
background = ${colors.background}
foreground = ${colors.foreground}

# Misc
fixed-center = true
padding-left = 0
padding-right = 1
module-margin = 1

# Modules
modules-left = i3
modules-center = time
modules-right = updates wi-fi bluetooth pulseaudio mic backlight filesystem cpu memory keyboard battery


[module/i3]
type = internal/i3

ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10

pin-workspaces = false
index-sort = true
enable-click = false
enable-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %icon%
label-visible-padding = 1

label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1


[module/time]
type = internal/date
interval = 60
date = %H:%M


[module/updates]
type = custom/script
exec = bash ~/.config/polybar/scripts/updates.sh
interval = 600


[module/wi-fi]
type = internal/network
interface = wlan0

label-connected = %{A1:iwgtk:}%essid% %{A}
label-disconnected = %{A1:iwgtk:}%{F#66ffffff}%{F-}%{A}


[module/bluetooth]
type = custom/script
exec = bash ~/.config/polybar/scripts/bluetooth.sh
interval = 1

format=%{A1:blueberry:}<label>%{A}


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false

label-volume = %{A1:pavucontrol -t 1:} %percentage:3%%%{A}
label-muted = %{A1:pavucontrol -t 1:}%{F#66ffffff} %percentage:3%%%{F-}%{A}


[module/mic]
type = custom/script
interval = 1

format=%{A1:pavucontrol -t 4:}<label>%{A}

exec = bash ~/.config/polybar/scripts/mic.sh 


[module/backlight]
type = internal/backlight
card = amdgpu_bl0
enable-scroll = true

label =  %percentage:3%%


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /

label-mounted =  %percentage_used:3%%
#label-unmounted = %mountpoint% not mounted


[module/cpu]
type = internal/cpu
label =  %percentage:3%%


[module/memory]
type = internal/memory
label =  %gb_used%
interval = 3


[module/keyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock
label-layout =  %{A1::} %layout%%{A}


[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
